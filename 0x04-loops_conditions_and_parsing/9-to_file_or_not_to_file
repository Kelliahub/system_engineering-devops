#!/usr/bin/env bash
# This script checks the status of a file named "school" and prints messages depending on its existence and type.

if [ ! -e school ]; then
    echo "File does not exist"
else
    if [ -f school ]; then
        if [ ! -s school ]; then
            echo "File exists but empty"
        else
            echo "File exists and is a regular file"
        fi
    elif [ -d school ]; then
        echo "File exists but itâ€™s a directory"
    fi
fi
